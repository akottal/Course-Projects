
<div class="bs-docs-header" id="content" style="background-color: #878314">
  <div class="container">
    <div class="row">
      <h1 style="font-size: 60px;color:#ffffff;">Story Details</h1>
    </div>
  </div>
</div>


<div class="container bs-docs-container">
<h3 id="notice"><%= notice %></h3>
<%= render 'layouts/tail'%>
<p>
  <strong>Title:</strong>
  <%= @story.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @story.description %>
</p>

<p>
  <strong>Point value:</strong>
  <%= @story.point_value %>
</p>

<p>
  <strong>Stage:</strong>
  <%= @story.stage %>
</p>

<h3>List of Developers</h3>
<table border="1px" class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.name %></td>
        <td><%= developer.email%></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>
<br/>

<strong>
  <%= link_to 'Edit Story', edit_story_path(@story),class:"btn btn-default" %>
</strong><br/><br/>
    <%= render 'layouts/tail'%>
</div>
